<web-app>

<servlet>
      <servlet-name>CView</servlet-name>
      <servlet-class>com.lxisoft.servlets.ViewAllServlet</servlet-class>
</servlet>
<servlet>
      <servlet-name>CAdd</servlet-name>
      <servlet-class>com.lxisoft.servlets.AddServlet</servlet-class>
</servlet>
<servlet>
      <servlet-name>CSelect</servlet-name>
      <servlet-class>com.lxisoft.servlets.SearchServlet</servlet-class>
</servlet>
<servlet>
      <servlet-name>CEdit</servlet-name>
      <servlet-class>com.lxisoft.servlets.EditServlet</servlet-class>
</servlet>
<servlet>
      <servlet-name>CDelete</servlet-name>
      <servlet-class>com.lxisoft.servlets.DeleteServlet</servlet-class>
</servlet>
<servlet>
      <servlet-name>CDel</servlet-name>
      <servlet-class>com.lxisoft.servlets.DeleteAllServlet</servlet-class>
</servlet>
<servlet>
      <servlet-name>CSelect2</servlet-name>
      <servlet-class>com.lxisoft.servlets.SelectServlet</servlet-class>
</servlet>
<servlet>
      <servlet-name>CSort</servlet-name>
      <servlet-class>com.lxisoft.servlets.SortServlet</servlet-class>
</servlet>
<servlet>
      <servlet-name>CSkip_page</servlet-name>
      <servlet-class>com.lxisoft.servlets.ViewAllServlet</servlet-class>
</servlet>
<!-- <servlet>
      <servlet-name>userlogin</servlet-name>
      <servlet-class>com.lxisoft.servlets.LoginServlet</servlet-class>
</servlet> -->

<servlet-mapping>
		<servlet-name>CView</servlet-name>
		<url-pattern>/View</url-pattern>
</servlet-mapping>
<servlet-mapping>
		<servlet-name>CAdd</servlet-name>
		<url-pattern>/Add</url-pattern>
</servlet-mapping>
<servlet-mapping>
		<servlet-name>CSelect</servlet-name>
		<url-pattern>/select</url-pattern>
</servlet-mapping>
<servlet-mapping>
		<servlet-name>CEdit</servlet-name>
		<url-pattern>/edit</url-pattern>
</servlet-mapping>
<servlet-mapping>
		<servlet-name>CDelete</servlet-name>
		<url-pattern>/delete</url-pattern>
</servlet-mapping>
<servlet-mapping>
		<servlet-name>CDel</servlet-name>
		<url-pattern>/DeleteAll</url-pattern>
</servlet-mapping>
<servlet-mapping>
		<servlet-name>CSelect2</servlet-name>
		<url-pattern>/selectContact</url-pattern>
</servlet-mapping>
<servlet-mapping>
		<servlet-name>CSort</servlet-name>
		<url-pattern>/sort</url-pattern>
</servlet-mapping>
<servlet-mapping>
		<servlet-name>CSkip_page</servlet-name>
		<url-pattern>/Skip</url-pattern>
</servlet-mapping>
<!-- <servlet-mapping>
		<servlet-name>userlogin</servlet-name>
		<url-pattern>/login</url-pattern>
</servlet-mapping> -->

<security-constraint>
      <web-resource-collection>
         <web-resource-name>login</web-resource-name>
         <url-pattern>/View</url-pattern>
         <http-method>GET</http-method>
         <http-method>POST</http-method>
      </web-resource-collection>

      <auth-constraint>
         <description>
            Let only admin use this app
         </description>
         <role-name>manager</role-name>
         <role-name>user</role-name>
         <role-name>guest</role-name>
      </auth-constraint>
   </security-constraint>
  <security-role>
      <role-name>manager</role-name>
         <role-name>guest</role-name>
   </security-role>
    <security-role>
      <role-name>user</role-name>
   </security-role>

   <login-config>
      <auth-method>FORM</auth-method>
      <!-- <realm-name>login</realm-name> -->
      <form-login-config>
         <form-login-page>/Login.jsp</form-login-page>
         <form-error-page>/Error.jsp</form-error-page>
      </form-login-config>
   </login-config>
</web-app>