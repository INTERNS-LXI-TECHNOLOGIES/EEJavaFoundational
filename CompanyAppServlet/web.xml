<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">

    <!-- CompanyServlet -->
    <servlet>
        <servlet-name>CompanyServlet</servlet-name>
        <servlet-class>com.lxisoft.company.view.CompanyServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>CompanyServlet</servlet-name>
        <url-pattern>/CompanyServlet</url-pattern>
    </servlet-mapping>

    <!-- ProductServlet -->
    <servlet>
        <servlet-name>ProductServlet</servlet-name>
        <servlet-class>com.lxisoft.product.view.ProductServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>ProductServlet</servlet-name>
        <url-pattern>/ProductServlet</url-pattern>
    </servlet-mapping>

    <!-- ReadAlldServlet -->
    <servlet>
        <servlet-name>ReadAll</servlet-name>
        <servlet-class>com.lxisoft.product.controller.ReadAll</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>ReadAll</servlet-name>
        <url-pattern>/ReadAll</url-pattern>
    </servlet-mapping>

</web-app>
