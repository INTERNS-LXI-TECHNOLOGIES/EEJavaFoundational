<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="INFO">
    <Appenders>
        <!-- Appender for product.log -->
        <RollingFile name="ProductLogFile" fileName="${env:CATALINA_BASE}/logs/product.log"
                     filePattern="${env:CATALINA_BASE}/logs/product-%d{yyyy-MM-dd}-%i.log">
            <PatternLayout>
                <Pattern>%d{HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n</Pattern>
            </PatternLayout>
            <Policies>
                <TimeBasedTriggeringPolicy interval="1" modulate="true"/>
                <SizeBasedTriggeringPolicy size="10 MB"/>
            </Policies>
            <DefaultRolloverStrategy max="20"/>
        </RollingFile>

        <!-- Appender for company.log -->
        <RollingFile name="CompanyLogFile" fileName="${env:CATALINA_BASE}/logs/company.log"
                     filePattern="${env:CATALINA_BASE}/logs/company-%d{yyyy-MM-dd}-%i.log">
            <PatternLayout>
                <Pattern>%d{HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n</Pattern>
            </PatternLayout>
            <Policies>
                <TimeBasedTriggeringPolicy interval="1" modulate="true"/>
                <SizeBasedTriggeringPolicy size="10 MB"/>
            </Policies>
            <DefaultRolloverStrategy max="20"/>
        </RollingFile>

        <!-- Appender for employee.log -->
        <RollingFile name="EmployeeLogFile" fileName="${env:CATALINA_BASE}/logs/employee.log"
                     filePattern="${env:CATALINA_BASE}/logs/employee-%d{yyyy-MM-dd}-%i.log">
            <PatternLayout>
                <Pattern>%d{HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n</Pattern>
            </PatternLayout>
            <Policies>
                <TimeBasedTriggeringPolicy interval="1" modulate="true"/>
                <SizeBasedTriggeringPolicy size="10 MB"/>
            </Policies>
            <DefaultRolloverStrategy max="20"/>
        </RollingFile>

        <!-- Appender for TomcatLogFile -->
        <RollingFile name="TomcatLogFile" fileName="${env:CATALINA_BASE}/logs/tomcat.log"
                     filePattern="${env:CATALINA_BASE}/logs/tomcat-%d{yyyy-MM-dd}-%i.log">
            <PatternLayout>
                <Pattern>%d{HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n</Pattern>
            </PatternLayout>
            <Policies>
                <TimeBasedTriggeringPolicy interval="1" modulate="true"/>
                <SizeBasedTriggeringPolicy size="10 MB"/>
            </Policies>
            <DefaultRolloverStrategy max="20"/>
        </RollingFile>
    </Appenders>
    <Loggers>

        <!-- Logger for com.lxisoft.product package -->
        <Logger name="com.lxisoft.nimmy.workshoptwo.product.productmodel" level="INFO">
            <AppenderRef ref="ProductLogFile" />
        </Logger>

        <!-- Logger for com.lxisoft.company package -->
        <Logger name="com.lxisoft.nimmy.workshoptwo.company.companymodel" level="INFO">
            <AppenderRef ref="CompanyLogFile" />
        </Logger>

        <!-- Logger for com.lxisoft.employee package -->
        <Logger name="com.lxisoft.nimmy.workshoptwo.employee.employeemodel" level="INFO">
            <AppenderRef ref="EmployeeLogFile" />
        </Logger>

        <!-- Root logger (if any other classes not specified above) -->
        <Root level="INFO">
            <AppenderRef ref="TomcatLogFile" />
        </Root>
    </Loggers>
</Configuration>