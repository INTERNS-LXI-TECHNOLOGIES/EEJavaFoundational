<!DOCTYPE web-app PUBLIC
 "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
 "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>
  <display-name>Archetype Created Web Application</display-name>

 <servlet>
      <servlet-name>Dview</servlet-name>
      <servlet-class>com.lxisoft.servlets.ViewServlet</servlet-class>
</servlet>

<servlet-mapping>
		<servlet-name>Dview</servlet-name>
		<url-pattern>/view</url-pattern>
</servlet-mapping>
 <servlet>
      <servlet-name>DAdd</servlet-name>
      <servlet-class>com.lxisoft.servlets.AddServlet</servlet-class>
</servlet>

<servlet-mapping>
		<servlet-name>DAdd</servlet-name>
		<url-pattern>/Add</url-pattern>
</servlet-mapping>
 <servlet>
      <servlet-name>Dselect</servlet-name>
      <servlet-class>com.lxisoft.servlets.SelectServlet</servlet-class>
</servlet>

<servlet-mapping>
		<servlet-name>Dselect</servlet-name>
		<url-pattern>/select</url-pattern>
</servlet-mapping>
<servlet>
      <servlet-name>userlogout</servlet-name>
      <servlet-class>com.lxisoft.servlets.LogoutServlet</servlet-class>
</servlet>
<servlet-mapping>
		<servlet-name>userlogout</servlet-name>
		<url-pattern>/logout</url-pattern>
</servlet-mapping>
<servlet>
      <servlet-name>admin1</servlet-name>
      <servlet-class>com.lxisoft.servlets.AdminServlet</servlet-class>
</servlet>
<servlet-mapping>
		<servlet-name>admin1</servlet-name>
		<url-pattern>/admin</url-pattern>
</servlet-mapping>
<security-constraint>
      <web-resource-collection>
         <web-resource-name>login</web-resource-name>
         <url-pattern>/view</url-pattern>
         <http-method>GET</http-method>
         <http-method>POST</http-method>
      </web-resource-collection>

      <auth-constraint>
         <description>
            Let only admin use this app
         </description>
         <role-name>admin</role-name>
         <role-name>guest</role-name>

      </auth-constraint>
</security-constraint>
  <security-role>
      <role-name>admin</role-name>
      <role-name>guest</role-name> 
   </security-role>
   <login-config>
      <auth-method>FORM</auth-method>
 
      <form-login-config>
         <form-login-page>/login.jsp</form-login-page>
       
      </form-login-config>
   </login-config>
</web-app>
