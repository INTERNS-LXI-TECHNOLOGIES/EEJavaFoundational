
<web-app>
<servlet>
      <servlet-name>name</servlet-name>
      <servlet-class>com.lxisoft.servlet.Serv</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>name</servlet-name>
        <url-pattern>/url</url-pattern>
    </servlet-mapping>


    <servlet>
      <servlet-name>add</servlet-name>
      <servlet-class>com.lxisoft.servlet.AddServ</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>add</servlet-name>
        <url-pattern>/adddata</url-pattern>
    </servlet-mapping>


    <servlet>
      <servlet-name>selectt</servlet-name>
      <servlet-class>com.lxisoft.servlet.SelectByIdServ</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>selectt</servlet-name>
        <url-pattern>/select</url-pattern>
    </servlet-mapping>


    <servlet>
      <servlet-name>edited</servlet-name>
      <servlet-class>com.lxisoft.servlet.EditServ</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>edited</servlet-name>
        <url-pattern>/edit</url-pattern>
    </servlet-mapping>


    <servlet>
      <servlet-name>delete</servlet-name>
      <servlet-class>com.lxisoft.servlet.DeleteServ</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>delete</servlet-name>
        <url-pattern>/deletedata</url-pattern>
    </servlet-mapping>


    <servlet>
      <servlet-name>search</servlet-name>
      <servlet-class>com.lxisoft.servlet.SearchServ</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>search</servlet-name>
        <url-pattern>/searchdata</url-pattern>
    </servlet-mapping>


    <servlet>
      <servlet-name>Sort</servlet-name>
      <servlet-class>com.lxisoft.servlet.SortServ</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>Sort</servlet-name>
        <url-pattern>/sort</url-pattern>
    </servlet-mapping>


    <servlet>
      <servlet-name>SignUp</servlet-name>
      <servlet-class>com.lxisoft.servlet.SignUpServ</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>SignUp</servlet-name>
        <url-pattern>/signup</url-pattern>
    </servlet-mapping>



    <servlet>
      <servlet-name>Login</servlet-name>
      <servlet-class>com.lxisoft.servlet.LoginServ</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>Login</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>


<security-constraint>
      <web-resource-collection>
         <web-resource-name>java</web-resource-name>
         <url-pattern>/index.jsp</url-pattern>
            <http-method>GET</http-method>
            <http-method>POST</http-method>
      </web-resource-collection>
      
      <auth-constraint>
         <role-name>admin</role-name>
      </auth-constraint>
   </security-constraint>
   
   <security-role>
      <role-name>admin</role-name>
   </security-role>
   
   <login-config>
      <auth-method>FORM</auth-method>
      <form-login-config>
         <form-login-page>/Login.jsp</form-login-page>
         <form-error-page>/error.jsp</form-error-page>
      </form-login-config>
   </login-config>

    

</web-app>