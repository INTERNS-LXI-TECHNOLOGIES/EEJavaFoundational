<web-app>
    <servlet>
      <servlet-name>Read</servlet-name>
      <servlet-class>com.megha.controllers.ReadServletMvt</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>Read</servlet-name>
        <url-pattern>/admin</url-pattern>
    </servlet-mapping>

    <servlet>
      <servlet-name>Add</servlet-name>
      <servlet-class>com.megha.controllers.AddServletMVT</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>Add</servlet-name>
        <url-pattern>/add</url-pattern>
    </servlet-mapping>

    <security-constraint>
        <web-resource-collection>
           <web-resource-name>Covid19AffidavitRequester</web-resource-name>
           <url-pattern>/index.jsp</url-pattern>
           <http-method>GET</http-method>
           <http-method>POST</http-method>
        </web-resource-collection>
        
        <auth-constraint>
          <role-name>admin</role-name>
          <role-name>user</role-name>
        </auth-constraint>
     </security-constraint>
     
     <security-role>
      <role-name>admin</role-name>
        <role-name>user</role-name>
     </security-role>
     
     <login-config>
      <auth-method>FORM</auth-method>
      <form-login-config>
         <form-login-page>/Login.jsp</form-login-page>
         <form-error-page>/Error.jsp</form-error-page>
      </form-login-config>
   </login-config>

</web-app>