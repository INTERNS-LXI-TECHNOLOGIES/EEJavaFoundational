
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
                      http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
  version="3.1"
  metadata-complete="true">

  

<servlet>

<servlet-name>VegetablePage</servlet-name>
<servlet-class>com.lxisoft.servlets.ReadAndDeleteVegetableServlet</servlet-class>

</servlet>
<servlet-mapping>
<servlet-name>VegetablePage</servlet-name>
<url-pattern>/vegetable-list</url-pattern>
<url-pattern>/delete-vegetable</url-pattern>

</servlet-mapping>

<servlet>

<servlet-name>AddVegetablePage</servlet-name>
<servlet-class>com.lxisoft.servlets.CreateVegetableServlet</servlet-class>

</servlet>

	
<servlet-mapping>
<servlet-name>AddVegetablePage</servlet-name>
<url-pattern>/add-vegetable</url-pattern>
</servlet-mapping>

<servlet>

<servlet-name>updateVegetablePage</servlet-name>
<servlet-class>com.lxisoft.servlets.UpdateVegetableServlet</servlet-class>

</servlet>

<servlet-mapping>
<servlet-name>updateVegetablePage</servlet-name>
<url-pattern>/update-vegetable</url-pattern>
</servlet-mapping>


<servlet>

<servlet-name>imageVegetablePage</servlet-name>
<servlet-class>com.lxisoft.servlets.ImageServlet</servlet-class>

</servlet>

<servlet-mapping>
<servlet-name>imageVegetablePage</servlet-name>
<url-pattern>/image</url-pattern>
</servlet-mapping>


<servlet>

<servlet-name>WelcomePage</servlet-name>
<servlet-class>com.lxisoft.servlets.WelcomeServlet</servlet-class>

</servlet>
<servlet-mapping>
<servlet-name>WelcomePage</servlet-name>
<url-pattern>/</url-pattern>
</servlet-mapping>

</web-app>